<html>
    <head>
        <title>Stores</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
    </head>
    <body>
<!-- List of stores with links to store pages-->
        <div class="container">
            <h2>Stores</h2>
            {% if stores is not empty %}
                <p>Here are all your stores:</p>
                <ul class="list-group">
                    {% for store in stores %}
                        <li class="list-group-item"><a href="/stores/{{ store.getId }}">{{ store.getName }}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}
<!-- Add a store -->
            <div class="submit-form">
                <form action='/stores' method='post'>
                    <label for='name'>Store Name</label>
                    <input id='name' name='name' type='text'>

                    <button class="btn btn-default" type='submit'>Add Store</button>
                </form>
<!-- Delete all stores -->
                <form action='/delete_stores' method='post'>
                    <button class="btn btn-default" type='submit'>Clear All</button>
                </form>
            </div>
            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
